# ======================
# Monzo Analysis - Environment Configuration
# ======================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ======================
# Database
# ======================
POSTGRES_USER=monzo
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=monzo_analysis

# Full connection string (generated from above for local dev)
# DATABASE_URL=postgresql+asyncpg://monzo:your-password@localhost:5432/monzo_analysis

# ======================
# Redis
# ======================
# REDIS_URL=redis://localhost:6379/0

# ======================
# Security
# ======================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# ======================
# Monzo API
# ======================
# Get these from https://developers.monzo.com/
MONZO_CLIENT_ID=your-monzo-client-id
MONZO_CLIENT_SECRET=your-monzo-client-secret
MONZO_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback

# Optional: Restrict to specific Monzo user
# MONZO_OWNER_ID=user_xxx

# ======================
# Slack Notifications
# ======================
# Create incoming webhook at https://api.slack.com/messaging/webhooks
# Leave empty to disable Slack notifications
SLACK_WEBHOOK_URL=

# ======================
# Sync Schedule
# ======================
# Time to run daily sync (24-hour format, UTC)
SYNC_SCHEDULE_HOUR=6
SYNC_SCHEDULE_MINUTE=0

# ======================
# Development
# ======================
DEBUG=false
